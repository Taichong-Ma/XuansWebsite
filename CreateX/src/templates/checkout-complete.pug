extends partials/layout

//- Override default config variables
append config
  - var navbarTemplate = 'navbar-default'
  - var pageTitle = 'Checkout'
  - var pageTitleBgImage ='img/page-title/shop-pattern.jpg'
  - var parentMenu = 'Shop'
  - var menuTitle = 'Checkout - Complete'
  - var breadcrumbs = [{'title': 'Home', 'link': 'index.html'}, {'title': 'Shop', 'link': 'shop-boxed-ls.html'}]

//- Page Content
block content
  .container.pb-5.mb-3

    // Checkout: Complete
    .wizard.pb-3
      .wizard-body.pt-2.text-center
        h3.h4.pb-3 Thank you for your order!
        p.mb-2 Your order has been placed and will be processed as soon as possible.
        p.mb-2 Make sure you make note of your order number, which is <strong>34VB5540K83.</strong>
        p You will be receiving an email shortly with confirmation of your order. <u>You can now:</u>
        a(href='shop-boxed-ls.html').btn.btn-secondary.mt-3.mr-3 Go Back  Shopping
        a(href='order-tracking.html').btn.btn-primary.mt-3
          i.fe-icon-map-pin
          | &nbsp;Track Order

  //- footer-shop.pug template
  include partials/footer-shop
