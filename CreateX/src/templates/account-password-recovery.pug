extends partials/layout

//- Override default config variables
append config
  - var navbarTemplate = 'navbar-default'
  - var pageTitle = 'Password Recovery'
  - var pageTitleBgImage ='img/page-title/shop-pattern.jpg'
  - var parentMenu = 'Account'
  - var menuTitle = 'Password Recovery'
  - var breadcrumbs = [{'title': 'Home', 'link': 'index.html'}, {'title': 'Account', 'link': 'account-orders.html'}]

//- Page Content
block content
  .container.pb-5.mb-4
    .row.justify-content-center
      .col-lg-8.col-md-10
        h2.h4 Forgot your password?
        p Change your password in three easy steps. This helps to keep your new password secure.
        ol.list-unstyled
          li <span class='font-weight-medium text-accent'>1. </span> Fill in your email address below.
          li <span class='font-weight-medium text-accent'>2. </span> We'll email you a temporary code.
          li <span class='font-weight-medium text-accent'>3. </span> Use the code to change your password on our secure website.
        form(novalidate).wizard.needs-validation
          .wizard-body.pt-4
            label(for='email-for-pass') Enter your email address
            input(type='email' required)#email-for-pass.form-control
            .invalid-feedback Please enter valid email address!
            .valid-feedback Looks good!
          .wizard-footer.py-3
            button(type='submit').btn.btn-primary Get New Password

  //- footer-shop.pug template
  include partials/footer-shop
