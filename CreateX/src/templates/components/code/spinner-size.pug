// Spinner Size Code
#spinner-size-code.modal.fade
  .modal-dialog.modal-lg
    .modal-content
      .modal-header
        h4.modal-title Code
        button(type='button' class='close' data-dismiss='modal' aria-label='Close')
          span(aria-hidden='true') &times;
      .modal-body.pb-0
        ul(class='nav nav-tabs pre-nav-tabs justify-content-end' role='tablist')
          li.nav-item
            a(href='#html3' class='nav-link active' data-toggle='tab' role='tab') HTML
          li.nav-item
            a(href='#pug3' class='nav-link' data-toggle='tab' role='tab') Pug
        .tab-content
          div(id='html3' class='tab-pane fade show active' role='tabpanel')
            pre.text-md
              code.
                <strong>&lt;!-- Small Border Spinner --&gt;</strong>
                &lt;div class=&quot;spinner-border spinner-border-sm&quot; role=&quot;status&quot;&gt;
                  &lt;span class=&quot;sr-only&quot;&gt;Loading...&lt;/span&gt;
                &lt;/div&gt;

                <strong>&lt;!-- Small Growing Spinner --&gt;</strong>
                &lt;div class=&quot;spinner-grow spinner-grow-sm&quot; role=&quot;status&quot;&gt;
                  &lt;span class=&quot;sr-only&quot;&gt;Loading...&lt;/span&gt;

                <strong>&lt;!-- Larger Border Spinner --&gt;</strong>
                &lt;div class=&quot;spinner-border&quot; style=&quot;width: 3rem; height: 3rem;&quot; role=&quot;status&quot;&gt;
                  &lt;span class=&quot;sr-only&quot;&gt;Loading...&lt;/span&gt;
                &lt;/div&gt;

                <strong>&lt;!-- Larger Growing Spinner --&gt;</strong>
                &lt;div class=&quot;spinner-grow&quot; style=&quot;width: 3rem; height: 3rem;&quot; role=&quot;status&quot;&gt;
                  &lt;span class=&quot;sr-only&quot;&gt;Loading...&lt;/span&gt;
                &lt;/div&gt;
          div(id='pug3' class='tab-pane fade' role='tabpanel')
            pre.text-md
              code.
                <strong>//- Small Border Spinner</strong>
                div(role=&quot;status&quot;).spinner-border.spinner-border-sm
                  span.sr-only Loading...

                <strong>//- Small Growing Spinner</strong>
                div(role=&quot;status&quot;).spinner-grow.spinner-grow-sm
                  span.sr-only Loading...

                <strong>//- Larger Border Spinner</strong>
                div(style=&quot;width: 3rem; height: 3rem;&quot; role=&quot;status&quot;).spinner-border
                  span.sr-only Loading...

                <strong>//- Larger Growing Spinner</strong>
                div(style=&quot;width: 3rem; height: 3rem;&quot; role=&quot;status&quot;).spinner-grow
                  span.sr-only Loading...
