// Typography: Blockquotes Code
#typography-blockquotes-code.modal.fade
  .modal-dialog.modal-lg
    .modal-content
      .modal-header
        h4.modal-title Code
        button(type='button' class='close' data-dismiss='modal' aria-label='Close')
          span(aria-hidden='true') &times;
      .modal-body.pb-0
        ul(class='nav nav-tabs pre-nav-tabs justify-content-end' role='tablist')
          li.nav-item
            a(href='#html6' class='nav-link active' data-toggle='tab' role='tab') HTML
          li.nav-item
            a(href='#pug6' class='nav-link' data-toggle='tab' role='tab') Pug
        .tab-content
          div(id='html6' class='tab-pane fade show active' role='tabpanel')
            pre.text-md
              code.
                <strong>&lt;!-- Blockquote Left Aligned --&gt;</strong>
                &lt;div class=&quot;blockquote&quot;&gt;
                  &lt;p&gt;Lorem ipsum dolor sit amet...&lt;/p&gt;
                  &lt;footer class=&quot;blockquote-footer&quot;&gt;
                    Barbara Palson
                    &lt;cite&gt;Graphic Designer&lt;/cite&gt;
                  &lt;/footer&gt;
                &lt;/div&gt;

                <strong>&lt;!-- Blockquote Right Aligned --&gt;</strong>
                &lt;div class=&quot;blockquote text-right&quot;&gt;
                  &lt;p&gt;Lorem ipsum dolor sit amet...&lt;/p&gt;
                  &lt;footer class=&quot;blockquote-footer&quot;&gt;
                    Barbara Palson
                    &lt;cite&gt;Graphic Designer&lt;/cite&gt;
                  &lt;/footer&gt;
                &lt;/div&gt;

                <strong>&lt;!-- Blockquote Center Aligned --&gt;</strong>
                &lt;div class=&quot;blockquote text-center&quot;&gt;
                  &lt;p&gt;Lorem ipsum dolor sit amet...&lt;/p&gt;
                  &lt;footer class=&quot;blockquote-footer&quot;&gt;
                    Barbara Palson
                    &lt;cite&gt;Graphic Designer&lt;/cite&gt;
                  &lt;/footer&gt;
                &lt;/div&gt;
          div(id='pug6' class='tab-pane fade' role='tabpanel')
            pre.text-md
              code.
                <strong>//- Blockquote Left Aligned</strong>
                .blockquote
                  p Lorem ipsum dolor sit amet...
                  footer.blockquote-footer
                    | Barbara Palson
                    cite Graphic Designer

                <strong>//- Blockquote Right Aligned</strong>
                .blockquote.text-right
                  p Lorem ipsum dolor sit amet...
                  footer.blockquote-footer
                    | Barbara Palson
                    cite Graphic Designer
                
                <strong>//- Blockquote Center Aligned</strong>
                .blockquote.text-center
                  p Lorem ipsum dolor sit amet...
                  footer.blockquote-footer
                    | Barbara Palson
                    cite Graphic Designer
