          span(aria-hidden='true') &times;
      .modal-body.pb-0
        ul(class='nav nav-tabs pre-nav-tabs justify-content-end' role='tablist')
          li.nav-item
            a(href='#html8' class='nav-link active' data-toggle='tab' role='tab') HTML
          li.nav-item
            a(href='#pug8' class='nav-link' data-toggle='tab' role='tab') Pug
        .tab-content
          div(id='html8' class='tab-pane fade show active' role='tabpanel')
            pre.text-md
              code.
