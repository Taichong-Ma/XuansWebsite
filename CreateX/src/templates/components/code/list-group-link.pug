// List Group Link Example Code
#list-group-link-code.modal.fade
  .modal-dialog.modal-lg
    .modal-content
      .modal-header
        h4.modal-title Code
        button(type='button' class='close' data-dismiss='modal' aria-label='Close')
          span(aria-hidden='true') &times;
      .modal-body.pb-0
        ul(class='nav nav-tabs pre-nav-tabs justify-content-end' role='tablist')
          li.nav-item
            a(href='#html2' class='nav-link active' data-toggle='tab' role='tab') HTML
          li.nav-item
            a(href='#pug2' class='nav-link' data-toggle='tab' role='tab') Pug
        .tab-content
          div(id='html2' class='tab-pane fade show active' role='tabpanel')
            pre.text-md
              code.
                <strong>&lt;!-- List Group Link Example --&gt;</strong>
                &lt;nav class=&quot;list-group&quot;&gt;
                  &lt;a class=&quot;list-group-item&quot; href=&quot;#&quot;&gt;Cras justo odio&lt;/a&gt;
                  &lt;a class=&quot;list-group-item active&quot; href=&quot;#&quot;&gt;Dapibus ac facilisis (active)&lt;/a&gt;
                  &lt;a class=&quot;list-group-item&quot; href=&quot;#&quot;&gt;Morbi leo risus&lt;/a&gt;
                  &lt;a class=&quot;list-group-item disabled&quot; href=&quot;#&quot;&gt;Vestibulum at eros (disabled)&lt;/a&gt;&lt;/nav&gt;
          div(id='pug2' class='tab-pane fade' role='tabpanel')
            pre.text-md
              code.
                <strong>//- List Group Link Example</strong>
                nav.list-group
                  a(href=&quot;#&quot;).list-group-item Cras justo odio
                  a(href=&quot;#&quot;).list-group-item.active Dapibus ac facilisis (active)
                  a(href=&quot;#&quot;).list-group-item Morbi leo risus
                  a(href=&quot;#&quot;).list-group-item.disabled Vestibulum at eros (disabled)
