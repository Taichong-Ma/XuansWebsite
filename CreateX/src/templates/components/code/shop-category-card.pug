// Shop: Product Category Card Code
#shop-category-card-code.modal.fade
  .modal-dialog.modal-lg
    .modal-content
      .modal-header
        h4.modal-title Code
        button(type='button' class='close' data-dismiss='modal' aria-label='Close')
          span(aria-hidden='true') &times;
      .modal-body.pb-0
        ul(class='nav nav-tabs pre-nav-tabs justify-content-end' role='tablist')
          li.nav-item
            a(href='#html2' class='nav-link active' data-toggle='tab' role='tab') HTML
          li.nav-item
            a(href='#pug2' class='nav-link' data-toggle='tab' role='tab') Pug
        .tab-content
          div(id='html2' class='tab-pane fade show active' role='tabpanel')
            pre.text-md
              code.
                <strong>&lt;!-- Product Category Card --&gt;</strong>
                &lt;a class=&quot;product-category-card mx-auto&quot; href=&quot;#&quot;&gt;
                  &lt;div class=&quot;product-category-card-thumb&quot;&gt;
                    &lt;div class=&quot;main-img&quot;&gt;
                      &lt;img src=&quot;path-to-image&quot; alt=&quot;Shop Category&quot;/&gt;
                    &lt;/div&gt;
                    &lt;div class=&quot;thumblist&quot;&gt;
                      &lt;img src=&quot;path-to-image&quot; alt=&quot;Shop Category&quot;/&gt;
                      &lt;img src=&quot;path-to-image&quot; alt=&quot;Shop Category&quot;/&gt;
                    &lt;/div&gt;
                  &lt;/div&gt;
                  &lt;div class=&quot;product-category-card-body&quot;&gt;
                    &lt;div class=&quot;product-category-card-meta&quot;&gt;Starting from $127.00&lt;/div&gt;
                    &lt;h5 class=&quot;product-category-card-title&quot;&gt;TV, Video &amp;amp; Audio&lt;/h5&gt;
                  &lt;/div&gt;
                &lt;/a&gt;
          div(id='pug2' class='tab-pane fade' role='tabpanel')
            pre.text-md
              code.
                <strong>//- Product Category Card</strong>
                a(href=&quot;#&quot;).product-category-card.mx-auto
                  .product-category-card-thumb
                    .main-img
                      +image(&quot;path-to-image&quot;, &quot;Shop Category&quot;)
                    .thumblist
                      +image(&quot;path-to-image&quot;, &quot;Shop Category&quot;)
                      +image(&quot;path-to-image&quot;, &quot;Shop Category&quot;)
