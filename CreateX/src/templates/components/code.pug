      // Code block tabs
      .pb-5
        .d-flex.flex-wrap.justify-content-between
          h4.mr-3 Code block tabs
          a(href='#code-block-tabs-code' data-toggle='modal').navi-link.font-weight-bold.text-sm.text-uppercase.py-2
            i.fe-icon-code
            | &nbsp;&nbsp;Show code
