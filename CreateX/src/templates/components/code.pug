extends ../partials/layout

//- Override default config variables
append config
  - var pageTitle = 'Code'
  - var pageTitleInverse = true
  - var pageTitleBgImage ='img/page-title/components-pattern.png'
  - var pageTitleIndentLeft = true
  - var isNestedFile = true
  - var parentMenu = 'Components'
  - var breadcrumbs = [{'title': 'Home', 'link': '../index.html'}, {'title': 'Components', 'link': '../components.html'}]

//- Page Content
block content

  //- Code Inline Code Modal
  include code/code-inline

  //- Code User Input Code Modal
  include code/code-user-input

  //- Code Block Code Modal
  include code/code-block

  //- Code Block Scrollable Code Modal
  include code/code-block-scrollable

  //- Code Block Tabs Code Modal
  include code/code-block-tabs

  // Off-Canvas (Sidebar)
  include ../partials/sidebar-components

  // Off-Canvas Wrapper
  .offcanvas-wrapper
    .container.pb-4
    
      // Inline code
      .pb-5
        .d-flex.flex-wrap.justify-content-between
          h4.mr-3 Inline code
          a(href='#code-inline-code' data-toggle='modal').navi-link.font-weight-bold.text-sm.text-uppercase.py-2
            i.fe-icon-code
            | &nbsp;&nbsp;Show code
        hr.pb-4.mb-1
        p.text-lg Wrap inline snippets of code with <code>&lt;code&gt;</code>. Be sure to escape HTML angle brackets.
    
      // User input
      .pb-5
        .d-flex.flex-wrap.justify-content-between
          h4.mr-3 User input
          a(href='#code-user-input-code' data-toggle='modal').navi-link.font-weight-bold.text-sm.text-uppercase.py-2
            i.fe-icon-code
            | &nbsp;&nbsp;Show code
        hr.pb-4.mb-1
        p.text-lg To switch directories, type <kbd>cd</kbd> followed by the name of the directory.<br> To edit settings, press <kbd><kbd>ctrl</kbd> + <kbd>,</kbd></kbd>
    
      // Code block
      .pb-5
        .d-flex.flex-wrap.justify-content-between
          h4.mr-3 Code block
          a(href='#code-block-code' data-toggle='modal').navi-link.font-weight-bold.text-sm.text-uppercase.py-2
            i.fe-icon-code
            | &nbsp;&nbsp;Show code
        hr.pb-4.mb-1
        pre.text-md: code &lt;p&gt;Sample text here...&lt;/p&gt;<br>&lt;p&gt;And another line of sample text here...&lt;/p&gt;
    
      // Code block scrollable
      .pb-5
        .d-flex.flex-wrap.justify-content-between
          h4.mr-3 Code block scrollable
          a(href='#code-block-scrollable-code' data-toggle='modal').navi-link.font-weight-bold.text-sm.text-uppercase.py-2
            i.fe-icon-code
            | &nbsp;&nbsp;Show code
        hr.pb-4.mb-1
        pre.pre-scrollable.text-md
          code.
            &lt;div class=&quot;team-card-style-1 mx-auto&quot;&gt;
