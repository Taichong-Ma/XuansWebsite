extends partials/layout

//- Override default config variables
append config
  - var navbarTemplate = 'navbar-default'
  - var isPageTitle = false
  - var parentMenu = 'Pages'
  - var menuTitle = 'Contacts v.1'
  - var isGoogleMap = true

//- Page Content
block content

  // Hero
  section.bg-parallax.py-5
    span(style='opacity: .6;').bg-overlay
    .bg-parallax-img(data-parallax='{"y" : 100}')
      +image('img/pages/contacts-hero-bg.jpg', 'Parallax Background')
    div(style='max-width: 800px;').bg-parallax-content.px-3.py-md-5.mx-auto.mt-lg-5.mb-lg-5.text-center
      h1.text-white.pt-2 Get in touch with us!
      p.text-xl.text-white.opacity-80.pb-3 Share your ideas with us and we do our best to turn your ideas into reality.
  
  // Contact Details
  section.container-fluid.mb-5
    .row
      .col-md-3.col-sm-6.border-right.py-2.border-bottom
        a(href='#map').scroll-to.icon-box.text-center.mx-auto.box-shadow-none.px-0
          .icon-box-icon: i.fe-icon-map-pin
          h3.icon-box-title Find us
          p.icon-box-text.font-weight-medium 396 Lillian Blvd, Holbrook, NY 11741, USA
      .col-md-3.col-sm-6.py-2.border-right.border-bottom
        a(href='tel:+1212477690000').icon-box.text-center.mx-auto.box-shadow-none.px-0
          .icon-box-icon: i.fe-icon-phone
          h3.icon-box-title Call us
          p.icon-box-text.font-weight-medium +1 (212) 477 690 000
      .col-md-3.col-sm-6.py-2.border-right.border-bottom
        a(href='mailto:support@example.com').icon-box.text-center.mx-auto.box-shadow-none.px-0
          .icon-box-icon: i.fe-icon-mail
          h3.icon-box-title Email us
          p.icon-box-text.font-weight-medium support@example.com
      .col-md-3.col-sm-6.py-2.border-bottom
        a(href='#').icon-box.text-center.mx-auto.box-shadow-none.px-0
          .icon-box-icon: i.fe-icon-facebook
          h3.icon-box-title Follow us
          p.icon-box-text.font-weight-medium Facebook, Twitter, LinkedIn
  
  // Contact Form
  section.container.mb-5.pb-3
    .wizard
      .wizard-body.pt-3
        h2.h4.text-center Drop us a line
        p.text-muted.text-center We will get back to you as soon as possible
        form(novalidate).needs-validation
          .row.pt-3
            .col-sm-6
              .form-group
                label(for='contact-name') Your Name <span class='text-danger font-weight-medium'>*</span>
                input(type='text' id='contact-name' placeholder='John Doe' required).form-control
                .invalid-feedback Please enter your name!
            .col-sm-6
              .form-group
                label(for='contact-email') Your Email <span class='text-danger font-weight-medium'>*</span>
                input(type='email' id='contact-email' placeholder='johndoe@email.com' required).form-control
                .invalid-feedback Please provide a valid email address!
          .row
            .col-sm-6
              .form-group
                label(for='contact-subject') Subject
                input(type='text' id='contact-subject' placeholder='Provide short title of you request').form-control
            .col-sm-6
              .form-group
                label(for='contact-file') Attachment
                .custom-file
                  input(type='file' id='contact-file').custom-file-input
                  label(for='contact-file').custom-file-label Choose file...
          .form-group
            label(for='contact-message') Message <span class='text-danger font-weight-medium'>*</span>
            textarea(rows='7' id='contact-message' placeholder="Let us know more what's on your mind..." required).form-control
            .invalid-feedback Please write a message!
          .text-center
            button(type='submit').btn.btn-primary Send Message
  
  // Map
  section#map.google-map(
    data-height = '400',
    data-address = 'New York, USA',
    data-zoom = '10',
    data-disable-controls = 'false',
    data-scrollwheel = 'false',
    data-marker = 'img/map-marker.png',
    data-marker-title = 'We are here!',
    data-styles = '[{"featureType":"landscape","stylers":[{"hue":"#FFBB00"},{"saturation":43.400000000000006},{"lightness":37.599999999999994},{"gamma":1}]},{"featureType":"road.highway","stylers":[{"hue":"#FFC200"},{"saturation":-61.8},{"lightness":45.599999999999994},{"gamma":1}]},{"featureType":"road.arterial","stylers":[{"hue":"#FF0300"},{"saturation":-100},{"lightness":51.19999999999999},{"gamma":1}]},{"featureType":"road.local","stylers":[{"hue":"#FF0300"},{"saturation":-100},{"lightness":52},{"gamma":1}]},{"featureType":"water","stylers":[{"hue":"#0078FF"},{"saturation":-13.200000000000003},{"lightness":2.4000000000000057},{"gamma":1}]},{"featureType":"poi","stylers":[{"hue":"#00FF6A"},{"saturation":-1.0989010989011234},{"lightness":11.200000000000017},{"gamma":1}]}]'
  )

  //- footer-default.pug template
  include partials/footer-default
